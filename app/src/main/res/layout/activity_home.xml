            <!--&lt;!&ndash;android:text="@string/monitor"&ndash;&gt;-->
            <!--&lt;!&ndash;android:textColor="#000000" />&ndash;&gt;-->
    <!--</android.support.v7.widget.Toolbar>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMarlin"
                android:layout_width="wrap_content"
                android:layout_height="148dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:padding="20dp"
                android:src="@drawable/marlinmarlin" />

            <TextView
                android:id="@+id/ketRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/route"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#34495e"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerAPI"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorSpinner"
                android:elevation="5dp"
                android:entries="@array/marlin"
                android:spinnerMode="dropdown"></Spinner>

            <TextView
                android:id="@+id/ketCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kondisi"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#34495e"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerCon"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorSpinner"
                android:elevation="5dp"
                android:entries="@array/kondisi">

            </Spinner>


            <Button
                android:id="@+id/btnchoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_image"
                android:elevation="30dp"
                android:text="@string/chooseImg" />
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/ketDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#34495e"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/dropText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:elevation="5dp"
                android:background="#ffffff"
                android:gravity="start|top"
                android:inputType="textMultiLine" />
            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:elevation="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/send"
                />


        </LinearLayout>


    </ScrollView>



</LinearLayout>